{
  "compilerOptions": {
    "noEmit": false,
    "composite": true,
    "target": "es2020",
    "module": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "apps/**/jest.config.ts",
    "apps/**/dist",
    "apps/**/__tests__/**",
    "packages/**/jest.config.ts",
    "packages/**/dist",
    "packages/**/__tests__/**"
  ]
}
